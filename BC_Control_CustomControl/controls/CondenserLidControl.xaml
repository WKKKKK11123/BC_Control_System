<UserControl
    x:Class="BC_Control_CustomControl.Controls.CondenserLidControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BC_Control_CustomControl.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="userControl"
    Width="110"
    d:DesignHeight="60"
    mc:Ignorable="d">
    <Grid Width="110" Height="10">
        <Viewbox
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Stretch="Fill">
            <Canvas
                Width="110"
                Height="10"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
                <!--  左侧盖子  -->
                <Rectangle
                    x:Name="leftLid"
                    Canvas.Left="2"
                    Width="53"
                    Height="8"
                    Fill="Gray"
                    RenderTransformOrigin="0,1"
                    Stroke="Black">
                    <Rectangle.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform />
                            <SkewTransform />
                            <RotateTransform x:Name="leftLidRotate" />
                            <TranslateTransform />
                        </TransformGroup>
                    </Rectangle.RenderTransform>
                </Rectangle>

                <!--  右侧盖子  -->
                <Rectangle
                    x:Name="rightLid"
                    Canvas.Left="55"
                    Width="53"
                    Height="8"
                    Fill="Gray"
                    RenderTransformOrigin="1,1"
                    Stroke="Black">
                    <Rectangle.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform />
                            <SkewTransform />
                            <RotateTransform x:Name="rightLidRotate" />
                            <TranslateTransform />

                        </TransformGroup>
                    </Rectangle.RenderTransform>
                </Rectangle>
            </Canvas>
        </Viewbox>
    </Grid>
</UserControl>
