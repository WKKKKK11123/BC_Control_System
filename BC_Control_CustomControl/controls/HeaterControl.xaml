                        Canvas.Top="10"
                        Width="51"
                        Height="40"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Fill="LightGray"
                        Stretch="Fill"
                        Stroke="Black"
                        StrokeThickness="1">
                        <!--  明确设置线条粗细  -->
