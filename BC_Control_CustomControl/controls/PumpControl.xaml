<UserControl
    x:Class="BC_Control_CustomControl.Controls.PumpControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BC_Control_CustomControl.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="30"
    d:DesignWidth="30"
    mc:Ignorable="d">
    <Grid>
        <Viewbox>
            <Canvas
                Name="myRectangle"
                Width="30"
                Height="30"
                RenderTransformOrigin="0.5 0.5">
                <Canvas.RenderTransform>
                    <TransformGroup>
                        <RotateTransform x:Name="rectRotateTransform" Angle="0" />
                        <ScaleTransform x:Name="rectScaleTransform" ScaleX="1" ScaleY="1" />
                        <TranslateTransform x:Name="rectTranslateTransform" />
                    </TransformGroup>
                </Canvas.RenderTransform>
                <Ellipse
                    x:Name="SwitchEllipse"
                    Width="30"
                    Height="30"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Fill="LightGray"
                    RenderTransformOrigin="0.5,0.5"
                    Stretch="Fill"
                    Stroke="Black" />
                <Path
                    Canvas.Left="10"
                    Canvas.Top="17.162"
                    Width="10"
                    Height="9"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Fill="White"
                    Stretch="Fill"
                    Stroke="Black"
                    StrokeThickness="0.5">
                    <Path.Data>
                        <PathGeometry Figures="M9.8853868,19.598854 L18.669441,19.598854 14.267654,27.843604 z" />
                    </Path.Data>
                </Path>
            </Canvas>
        </Viewbox>
    </Grid>
</UserControl>
