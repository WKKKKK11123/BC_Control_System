<UserControl
    x:Class="BC_Control_CustomControl.Controls.TankWaferControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:BC_Control_CustomControl.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BC_Control_CustomControl.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="75"
    d:DesignWidth="75"
    mc:Ignorable="d">
    <UserControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>
    <Grid
        x:Name="bath1"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch">
        <Viewbox HorizontalAlignment="Left" VerticalAlignment="Top">
            <Canvas
                Name="myRectangle"
                Width="70"
                Height="70"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <Path
                    x:Name="waferPath1"
                    Canvas.Left="0"
                    Canvas.Top="0"
                    Fill="{Binding RelativeSource={RelativeSource AncestorType=local:TankWaferControl}, Path=WaferColor2}"
                    Stroke="Transparent"
                    Visibility="Visible">
                    <Path.Data>
                        <PathGeometry>
                            <PathFigure StartPoint="0 35">
                                <ArcSegment
                                    IsLargeArc="True"
                                    Point="70, 35"
                                    Size="30, 30"
                                    SweepDirection="Clockwise" />
                                <ArcSegment
                                    IsLargeArc="True"
                                    Point="0 35"
                                    Size="30, 30"
                                    SweepDirection="Clockwise" />
                            </PathFigure>
                        </PathGeometry>
                    </Path.Data>
                </Path>
            </Canvas>
        </Viewbox>
    </Grid>
</UserControl>
