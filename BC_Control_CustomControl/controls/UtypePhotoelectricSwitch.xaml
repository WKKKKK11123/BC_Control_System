<UserControl
    x:Class="BC_Control_CustomControl.Controls.UtypePhotoelectricSwitch"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BC_Control_CustomControl.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="30"
    d:DesignWidth="30"
    mc:Ignorable="d">
    <Grid>
        <Canvas
            Name="myRectangle"
            Width="30"
            Height="30"
            RenderTransformOrigin="0.5 0.5">
            <Canvas.RenderTransform>
                <TransformGroup>
                    <RotateTransform x:Name="rectRotateTransform" Angle="0" />
                    <ScaleTransform x:Name="rectScaleTransform" ScaleX="1" ScaleY="1" />
                    <TranslateTransform x:Name="rectTranslateTransform" />
                </TransformGroup>
            </Canvas.RenderTransform>
            <Path
                x:Name="SwitchPath"
                Fill="Gray"
                StrokeEndLineCap="Round"
                StrokeStartLineCap="Round">
                <Path.Data>
                    <PathGeometry>
                        <PathFigure IsClosed="True" StartPoint="0 0">
                            <LineSegment Point="30 0" />
                            <LineSegment Point="30 8" />
                            <LineSegment Point="10 8" />
                            <LineSegment Point="10 22" />
                            <LineSegment Point="30 22" />
                            <LineSegment Point="30 30" />
                            <LineSegment Point="0 30" />
                            <LineSegment Point="0 10" />
                        </PathFigure>

                    </PathGeometry>
                </Path.Data>
            </Path>
        </Canvas>
    </Grid>
</UserControl>
