<UserControl
    x:Class="BC_Control_CustomControl.Controls.WTRRobotControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:BC_Control_CustomControl.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BC_Control_CustomControl.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="120"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>
    <Grid
        x:Name="bath1"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch">
        <Border
            Width="127"
            Height="120"
            HorizontalAlignment="Left"
            VerticalAlignment="Center">
            <Canvas
                Name="myRectangle"
                Width="100"
                Height="100">
                <Canvas.RenderTransform>
                    <TranslateTransform x:Name="rectTransform" />
                </Canvas.RenderTransform>
                <Path
                    Canvas.Left="10"
                    Fill="Black"
                    Stroke="#030303"
                    StrokeEndLineCap="Round"
                    StrokeStartLineCap="Round">
                    <Path.Data>
                        <PathGeometry>
                            <PathFigure IsClosed="True" StartPoint="0 0">
                                <LineSegment Point="80 0" />
                                <LineSegment Point="80 17" />
                                <LineSegment Point="0 17" />
                            </PathFigure>
                            <PathFigure IsClosed="True" StartPoint="20 17">
                                <LineSegment Point="60 17" />
                                <LineSegment Point="45 25" />
                                <LineSegment Point="45 90" />
                                <LineSegment Point="35 90" />
                                <LineSegment Point="35 25" />
                            </PathFigure>
                        </PathGeometry>
                    </Path.Data>
                </Path>
                <Path
                    Canvas.Left="10"
                    Fill="#7A7E90"
                    Stroke="#030303"
                    StrokeEndLineCap="Round"
                    StrokeStartLineCap="Round">
                    <Path.Data>
                        <PathGeometry>

                            <PathFigure IsClosed="True" StartPoint="70 17">
                                <LineSegment Point="75 17" />
                                <LineSegment Point="75 75" />
                                <LineSegment Point="70 85" />
                            </PathFigure>
                            <PathFigure IsClosed="True" StartPoint="5 17">
                                <LineSegment Point="10 17" />
                                <LineSegment Point="10 85" />
                                <LineSegment Point="5 75" />
                            </PathFigure>
                        </PathGeometry>
                    </Path.Data>
                </Path>
                <Path
                    x:Name="waferPath"
                    Canvas.Left="10"
                    Fill="{Binding RelativeSource={RelativeSource AncestorType=local:WTRRobotControl}, Path=WaferColor}"
                    Stroke="#030303"
                    Visibility="{Binding RelativeSource={RelativeSource AncestorType=local:WTRRobotControl}, Path=Status, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Path.Data>
                        <PathGeometry>
                            <PathFigure StartPoint="10 57">
                                <ArcSegment
                                    IsLargeArc="True"
                                    Point="70, 57"
                                    Size="30, 30"
                                    SweepDirection="Clockwise" />
                                <ArcSegment
                                    IsLargeArc="True"
                                    Point="10 57"
                                    Size="30, 30"
                                    SweepDirection="Clockwise" />
                            </PathFigure>
                        </PathGeometry>
                    </Path.Data>
                </Path>
            </Canvas>
        </Border>
    </Grid>
</UserControl>
