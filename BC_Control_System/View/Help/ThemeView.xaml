<UserControl
    x:Class="BC_Control_System.View.Help.ThemeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BC_Control_System.View.Help"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:theme="clr-namespace:BC_Control_System.Theme"
    d:DesignHeight="450"
    d:DesignWidth="800"
    theme:ColorThemeProps.Background="{DynamicResource BackgroundBrush}"
    mc:Ignorable="d">
    <Grid>
        <Border
            Width="600"
            Height="300"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Margin="10,10,10,10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="24"
                    Text="主题设置" />
                <Button
                    x:Name="ApplyButton"
                    Grid.Column="1"
                    Width="124"
                    Height="30"
                    Content="Dark"
                    FontSize="14" />
                <Button
                    x:Name="ApplyButton1"
                    Grid.Column="2"
                    Width="124"
                    Height="30"
                    Content="Light"
                    FontSize="14" />
            </Grid>

        </Border>
    </Grid>
</UserControl>
