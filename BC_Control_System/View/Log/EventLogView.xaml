<UserControl
    x:Class="BC_Control_System.Views.EventLogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:BC_Control_System.Views"
    xmlns:localCommand="clr-namespace:BC_Control_System.Command"
    xmlns:localConverters="clr-namespace:BC_Control_System.Converters"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignHeight="655"
    d:DesignWidth="1348"
    mc:Ignorable="d">
    <UserControl.Resources>
        <localConverters:ListToDataTable x:Key="statisList" />
        <localCommand:ExportExcel x:Key="Export" />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*" />
            <ColumnDefinition Width="176" />
        </Grid.ColumnDefinitions>
        <Border
            Grid.Column="2"
            Margin="6"
            BorderBrush="Gray"
            BorderThickness="1">
            <StackPanel Grid.Column="1" Orientation="Vertical">
                <Button
                    Width="140"
                    Margin="3,5,3,1"
                    Command="{Binding SelectTimeCommand}"
                    Content="Search" />
                <Button
                    Width="140"
                    Margin="3,5,3,1"
                    Command="{Binding ExportCommand}"
                    Content="Export" />

            </StackPanel>
        </Border>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="20*" />
            </Grid.RowDefinitions>
            <TextBlock Margin="10,10,1,10" Text="Event Log" />
            <Border Grid.Row="1">
                <DataGrid
                    Grid.Row="1"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    CanUserReorderColumns="False"
                    CanUserResizeColumns="False"
                    CanUserResizeRows="False"
                    ColumnHeaderHeight="25"
                    FontSize="12"
                    GridLinesVisibility="Horizontal"
                    HeadersVisibility="Column"
                    IsReadOnly="True"
                    ItemsSource="{Binding InsertTimeCollections}"
                    RowHeight="35"
                    Style="{x:Null}">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="150"
                            Binding="{Binding InsertTime, StringFormat={}{0:yyyy-MM-dd HH:mm:ss}}"
                            Header="Insert Time" />
                        <DataGridTextColumn
                            Width="150"
                            Binding="{Binding GroupName, Mode=TwoWay}"
                            Header="Group Name" />
                        <DataGridTextColumn
                            Width="300"
                            Binding="{Binding Comment, Mode=TwoWay}"
                            Header="Comment" />
                        <DataGridTextColumn
                            Width="150"
                            Binding="{Binding VarName, Mode=TwoWay}"
                            Header="VarName" />
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Grid>
</UserControl>

