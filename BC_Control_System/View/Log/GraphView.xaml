<UserControl
    x:Class="BC_Control_System.View.Log.GraphView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:BC_Control_System.View.Log"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="655"
    d:DesignWidth="1348"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel Margin="0,2,0,2" Orientation="Vertical">
            <StackPanel
                Margin="10"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    Margin="10,0,10,0"
                    VerticalAlignment="Center"
                    Text="Module Select :" />
                <ComboBox
                    MinWidth="160"
                    Margin="5,0,0,0"
                    ItemsSource="{Binding InputEnumValues}"
                    SelectedItem="{Binding InputMenuItem}" />
            </StackPanel>
            <StackPanel
                Margin="10"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    Margin="10,0,10,0"
                    VerticalAlignment="Center"
                    Text="Function Select :" />
                <ComboBox
                    MinWidth="160"
                    ItemsSource="{Binding InputEnumValues}"
                    SelectedItem="{Binding InputMenuItem}" />
            </StackPanel>
            <ListBox
                Width="280"
                Margin="10"
                Background="Transparent"
                BorderBrush="Transparent"
                SelectionMode="Extended">

                <ListBoxItem Content="111" />
                <ListBoxItem Content="222" />
                <ListBoxItem Content="333" />
                <ListBoxItem Content="444" />
            </ListBox>
        </StackPanel>
        <Border
            Grid.Column="1"
            Margin="6"
            BorderBrush="Gray"
            BorderThickness="1">
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Grid.Row="1"
                        Margin="10,0,0,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Text="StartTime:" />

                    <hc:DateTimePicker
                        Grid.Row="1"
                        Grid.Column="2"
                        Width="200"
                        Height="30"
                        Margin="6,0,0,0"
                        FontSize="12"
                        Text="{Binding StartTime, Mode=TwoWay}" />
                    <TextBlock
                        Grid.Row="1"
                        Margin="10,0,0,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Text="EndTime:" />

                    <hc:DateTimePicker
                        Grid.Row="1"
                        Grid.Column="2"
                        Width="200"
                        Height="30"
                        Margin="6,0,0,0"
                        FontSize="12"
                        Text="{Binding EndTime, Mode=TwoWay}" />
                </StackPanel>


            </Grid>
        </Border>
    </Grid>
</UserControl>
