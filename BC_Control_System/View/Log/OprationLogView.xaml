<UserControl
    x:Class="BC_Control_System.Views.OprationLogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:BC_Control_System.Views"
    xmlns:localCommand="clr-namespace:BC_Control_System.Command"
    xmlns:localConverters="clr-namespace:BC_Control_System.Converters"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignHeight="655"
    d:DesignWidth="1348"
    mc:Ignorable="d">
    <UserControl.Resources>
        <localConverters:ListToDataTable x:Key="statisList" />
        <localCommand:ExportExcel x:Key="Export" />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*" />
            <ColumnDefinition Width="176" />
        </Grid.ColumnDefinitions>
        <Border
            Grid.Column="2"
            Margin="6"
            BorderBrush="Gray"
            BorderThickness="1">
            <StackPanel Grid.Column="1" Orientation="Vertical">
                <Button
                    Width="140"
                    Margin="3,5,3,1"
                    Command="{Binding SelectByTime}"
                    Content="Select" />
                <Button
                    Width="140"
                    Margin="3,5,3,1"
                    Command="{Binding ExportCommand}"
                    Content="Export" />
            </StackPanel>
        </Border>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="20*" />
            </Grid.RowDefinitions>
            <TextBlock Margin="10,10,1,10" Text="Opration Log" />
            <DataGrid
                Grid.Row="1"
                Margin="3,0,0,0"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                CanUserReorderColumns="False"
                CanUserResizeColumns="False"
                CanUserResizeRows="False"
                ColumnHeaderHeight="25"
                FontSize="12"
                GridLinesVisibility="Horizontal"
                HeadersVisibility="Column"
                IsReadOnly="True"
                ItemsSource="{Binding Logs}"
                RowHeight="35"
                Style="{x:Null}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="150"
                        Binding="{Binding Date}"
                        Header="Date" />
                    <DataGridTextColumn
                        Width="150"
                        Binding="{Binding Time}"
                        Header="Time" />
                    <DataGridTextColumn
                        Width="150"
                        Binding="{Binding OldValue, Mode=TwoWay}"
                        Header="Old Value" />
                    <DataGridTextColumn
                        Width="150"
                        Binding="{Binding NewValue, Mode=TwoWay}"
                        Header="New Value" />
                    <DataGridTextColumn
                        Width="300"
                        Binding="{Binding Comment, Mode=TwoWay}"
                        Header="Comment" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>