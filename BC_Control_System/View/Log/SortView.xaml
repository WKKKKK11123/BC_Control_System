<UserControl
    x:Class="BC_Control_System.View.Log.SortView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BC_Control_System.View.Log"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignHeight="180"
    d:DesignWidth="400"
    Background="{DynamicResource BackgroundBrush}"
    mc:Ignorable="d">
    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="Width" Value="400" />
            <Setter Property="Height" Value="260" />
            <Setter Property="WindowStyle" Value="None" />
            <Setter Property="ResizeMode" Value="NoResize" />
            <Setter Property="prism:Dialog.WindowStartupLocation" Value="CenterScreen" />
        </Style>
    </prism:Dialog.WindowStyle>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.4*" />
            <RowDefinition Height="0.6*" />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border Background="White">
            <TextBlock
                Margin="20,3"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Style="{x:Null}"
                Text="Order Select View" />
        </Border>
        <TextBlock
            Grid.Row="1"
            Margin="40,3"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Style="{x:Null}"
            Text="Order :" />
        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <RadioButton
                Margin="10"
                HorizontalAlignment="Left"
                Content="Ascending Order"
                GroupName="Demo1"
                IsChecked="{Binding AscendingOrder}"
                Style="{x:Null}" />
            <RadioButton
                Margin="10"
                HorizontalAlignment="Left"
                Content="Descending Order"
                GroupName="Demo1"
                IsChecked="{Binding DisAscendingOrder}"
                Style="{x:Null}" />

        </StackPanel>
        <StackPanel
            Grid.Row="5"
            Grid.ColumnSpan="3"
            HorizontalAlignment="Center"
            Orientation="Horizontal">

            <Button
                Width="100"
                Margin="0,0,0,0"
                Command="{Binding ConfirmCommand}"
                Content="Search" />
            <Button
                Width="100"
                Margin="80,0,0,0"
                Command="{Binding CancelCommand}"
                Content="Exit" />
        </StackPanel>
    </Grid>

</UserControl>
