<UserControl
    x:Class="BC_Control_System.View.Maintenance.UseRegView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:BC_Control_CustomControl.Controls;assembly=BC_Control_CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ioviewmodel="clr-namespace:BC_Control_System.ViewModel.Maintenance"
    xmlns:localCommand="clr-namespace:BC_Control_System.Command"
    xmlns:localConverters="clr-namespace:BC_Control_System.Converters"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{DynamicResource BackgroundBrush}"
    mc:Ignorable="d">
    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <!--  窗体的宽和高根据内容的大小设置  -->
            <Setter Property="SizeToContent" Value="WidthAndHeight" />
            <!--  不允许调整窗体尺寸  -->
            <Setter Property="ResizeMode" Value="NoResize" />
            <!--  设置窗体的启动位置在屏幕中间  -->
            <Setter Property="prism:Dialog.WindowStartupLocation" Value="CenterScreen" />
        </Style>
    </prism:Dialog.WindowStyle>
    <UserControl.Resources>
        <localConverters:EnumToBoolConverter x:Key="EnumToBoolConverter" />
    </UserControl.Resources>
    <Border
        Width="650"
        Height="450"
        Margin="10"
        CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="5*" />
                <RowDefinition Height="1.8*" />
                <RowDefinition Height="3*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1.5*" />
                        <RowDefinition Height="1.5*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="0.5*" />
                    </Grid.RowDefinitions>
                    <StackPanel>
                        <TextBlock Margin="6,10,6,0" Text="User Name" />
                        <TextBox
                            Height="20"
                            Margin="6,6,6,0"
                            Text="{Binding CurrentAdmin.LoginName, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                    <StackPanel Grid.Row="2" Visibility="Hidden">
                        <TextBlock Margin="6,10,6,0" Text="User ID" />
                        <TextBox
                            Height="20"
                            Margin="6,6,6,0"
                            Text="{Binding CurrentAdmin.LoginId, Mode=TwoWay}" />
                    </StackPanel>
                    <StackPanel Grid.Row="1" Margin="0,10,0,0">
                        <TextBlock Margin="6,10,6,0" Text="Password" />
                        <conv:PasswordBoxWithEye Margin="6,6,6,0" Password="{Binding CurrentAdmin.LoginPwd, Mode=TwoWay}" />
                    </StackPanel>
                    <CheckBox
                        Grid.Row="3"
                        Margin="6"
                        Content="Personal"
                        IsChecked="{Binding CurrentAdmin.Personal, Mode=TwoWay}"
                        Visibility="Hidden" />
                </Grid>
                <Grid Grid.Column="1">
                    <GroupBox Margin="10,8,10,40" Background="#E8E8E8">
                        <GroupBox.Header>
                            <TextBlock FontSize="12" Text="Direction" />
                        </GroupBox.Header>
                        <StackPanel>
                            <RadioButton
                                Margin="6"
                                HorizontalAlignment="Left"
                                Content="Operator"
                                IsChecked="{Binding CurrentAdmin.UserRights, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Operator}" />
                            <RadioButton
                                Margin="6"
                                HorizontalAlignment="Left"
                                Content="Process Engineer"
                                IsChecked="{Binding CurrentAdmin.UserRights, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=ProcessEngineer}" />
                            <RadioButton
                                Margin="6"
                                HorizontalAlignment="Left"
                                Content="Maintenance Engineer"
                                IsChecked="{Binding CurrentAdmin.UserRights, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=MaintenanceEngineer}" />
                            <RadioButton
                                Margin="6"
                                HorizontalAlignment="Left"
                                Content="Supervisor"
                                IsChecked="{Binding CurrentAdmin.UserRights, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Supervisor}" />
                            <RadioButton
                                Margin="6"
                                HorizontalAlignment="Left"
                                Content="Vendor"
                                IsChecked="{Binding CurrentAdmin.UserRights, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Vendor}" />
                        </StackPanel>
                    </GroupBox>
                </Grid>
                <StackPanel Grid.Column="2">
                    <Button
                        Width="80"
                        Height="30"
                        Margin="20"
                        Command="{Binding AddCommand}"
                        Content="Add" />
                    <Button
                        Width="80"
                        Height="30"
                        Margin="20"
                        Command="{Binding UpdateCommand}"
                        Content="Modify" />
                    <Button
                        Width="80"
                        Height="30"
                        Margin="20"
                        Command="{Binding DeleteCommand}"
                        Content="Delete" />

                </StackPanel>
            </Grid>
            <StackPanel Grid.Row="1">
                <TextBlock Margin="6,10,6,0" Text="Comment" />
                <TextBox
                    Height="20"
                    Margin="6,6,6,0"
                    Text="{Binding CurrentAdmin.Comment, Mode=TwoWay}" />
            </StackPanel>
            <Grid Grid.Row="2">
                <DataGrid
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    ColumnHeaderHeight="25"
                    FontSize="12"
                    IsReadOnly="True"
                    ItemsSource="{Binding AdminList}"
                    SelectedItem="{Binding CurrentAdmin, Mode=TwoWay}"
                    SelectionMode="Single"
                    Style="{x:Null}">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="120"
                            Binding="{Binding LoginName}"
                            Header="User Name" />
                        <!--<DataGridTextColumn
                            Width="100"
                            Binding="{Binding LoginId}"
                            Header="User ID" />-->
                        <DataGridTextColumn
                            Width="80"
                            Binding="{Binding UserRights}"
                            Header="Group" />
                        <!--<DataGridTextColumn
                            Width="120"
                            Binding="{Binding Personal}"
                            Header="Personal Folder" />-->
                        <DataGridTextColumn
                            Width="120"
                            Binding="{Binding Comment}"
                            Header="Comment" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Border>
</UserControl>
