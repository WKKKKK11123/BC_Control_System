<UserControl
    x:Class="BC_Control_System.View.Opration.BatchTrackingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:ValueConverters;assembly=ValueConverters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:BC_Control_System.View.Parameter"
    xmlns:localCommand="clr-namespace:BC_Control_System.Command"
    xmlns:localConverters="clr-namespace:BC_Control_System.Converters"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="655"
    d:DesignWidth="1348"
    mc:Ignorable="d">
    <UserControl.Resources>
        <conv:BoolToBrushConverter
            x:Key="BoolToColorConverter"
            FalseValue="White"
            TrueValue="Yellow" />
        <conv:ValueConverterGroup x:Key="BoolToVisibilityConverter">
            <conv:StringToBoolConverter TrueValue="1" />

            <conv:BoolToVisibilityConverter />
        </conv:ValueConverterGroup>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*" />
            <ColumnDefinition Width="176" />
        </Grid.ColumnDefinitions>
        <Border
            Margin="6"
            BorderBrush="Gray"
            BorderThickness="1">
            <DataGrid
                x:Name="grid"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                CanUserReorderColumns="False"
                CanUserResizeColumns="False"
                CanUserResizeRows="False"
                ColumnHeaderHeight="35"
                FontSize="16"
                GridLinesVisibility="All"
                HeadersVisibility="Column"
                HorizontalGridLinesBrush="LightGray"
                ItemsSource="{Binding ModuleStatusCollection}"
                SelectionMode="Extended"
                Style="{x:Null}"
                VerticalGridLinesBrush="LightGray">
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Height" Value="55" />
                        <Setter Property="Visibility" Value="{Binding IsWafer.Value, Converter={StaticResource BoolToVisibilityConverter}}" />
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>

                    <!--  设置列的样式  -->
                    <DataGridTemplateColumn
                        Width="100"
                        Header="StorageID"
                        IsReadOnly="True">
                        <DataGridTemplateColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                            </Style>
                        </DataGridTemplateColumn.HeaderStyle>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Margin="5,0,0,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontFamily="Microsoft YaHei"
                                    FontSize="14"
                                    Text="{Binding ModuleName}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn
                        Width="300"
                        Header="Batch ID"
                        IsReadOnly="True">
                        <DataGridTemplateColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                            </Style>
                        </DataGridTemplateColumn.HeaderStyle>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Margin="5,0,0,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontFamily="Microsoft YaHei"
                                    FontSize="14"
                                    Text="{Binding BatchID.Value}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn
                        Width="300"
                        Header="Recipe Name"
                        IsReadOnly="True">
                        <DataGridTemplateColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                            </Style>
                        </DataGridTemplateColumn.HeaderStyle>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    FontFamily="Microsoft YaHei"
                                    FontSize="14"
                                    Text="{Binding UnitRecipeName.Value}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>


            </DataGrid>
        </Border>
        <Border
            Grid.Column="2"
            Margin="6"
            BorderBrush="Gray"
            BorderThickness="1">
            <StackPanel>

                <Button
                    Width="140"
                    Height="30"
                    Margin="5,5"
                    Command="{Binding ProcessPauseCommand}"
                    CommandParameter="{Binding ElementName=grid, Path=SelectedItem}"
                    Content="Process Pause"
                    FontSize="12" />
                <Button
                    Width="140"
                    Height="30"
                    Margin="5,5"
                    Command="{Binding ProcessRestartCommand}"
                    CommandParameter="{Binding ElementName=grid, Path=SelectedItem}"
                    Content="Process Restart"
                    FontSize="12" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
