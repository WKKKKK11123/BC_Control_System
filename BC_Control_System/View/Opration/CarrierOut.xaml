<UserControl
    x:Class="BC_Control_System.View.Opration.CarrierOut"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BC_Control_System.View.Opration"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:theme="clr-namespace:BC_Control_System.Theme"
    Width="640"
    Height="280"
    theme:ColorThemeProps.Background="{DynamicResource BackgroundBrush}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TextBlock
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="Move Carrier from internal buffer to load port ?" />
        </Grid>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <TextBlock
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="Carrier ID" />
            <TextBox
                Width="160"
                Height="26"
                Margin="100,0,0,0"
                IsReadOnly="True" />


        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <TextBlock
                Margin="10,14,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Text="Out Port" />
            <StackPanel
                Margin="40,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
                <RadioButton
                    Margin="4"
                    HorizontalAlignment="Left"
                    Content="Auto Select"
                    GroupName="OutPort"
                    IsChecked="True"
                    Style="{x:Null}" />
                <RadioButton
                    Margin="4"
                    HorizontalAlignment="Left"
                    Content="Load port 1"
                    GroupName="OutPort"
                    Style="{x:Null}" />
                <RadioButton
                    Margin="4"
                    HorizontalAlignment="Left"
                    Content="Load port 2"
                    GroupName="OutPort"
                    Style="{x:Null}" />
                <RadioButton
                    Margin="4"
                    HorizontalAlignment="Left"
                    Content="Load port 3"
                    GroupName="OutPort"
                    Style="{x:Null}" />
                <RadioButton
                    Margin="4"
                    HorizontalAlignment="Left"
                    Content="Load port 4"
                    GroupName="OutPort"
                    Style="{x:Null}" />
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="5" Orientation="Horizontal">
            <Button
                Width="80"
                Height="30"
                Margin="200,0,0,0"
                VerticalAlignment="Center"
                Background="#E8E8E8"
                Command="{Binding ConfirmCommand}"
                Content="OK"
                FontSize="12" />
            <Button
                Width="80"
                Height="30"
                Margin="80,0,0,0"
                VerticalAlignment="Center"
                Background="#E8E8E8"
                Command="{Binding CancelCommand}"
                Content="Cancel"
                FontSize="12" />
        </StackPanel>
    </Grid>
</UserControl>
