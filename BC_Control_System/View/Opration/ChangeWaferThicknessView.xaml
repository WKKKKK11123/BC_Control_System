<UserControl
    x:Class="BC_Control_System.View.Opration.ChangeWaferThicknessView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:ValueConverters;assembly=ValueConverters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BC_Control_System.View.Opration"
    xmlns:localCommand="clr-namespace:BC_Control_System.Command"
    xmlns:localConverters="clr-namespace:BC_Control_System.Converters"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:theme="clr-namespace:BC_Control_System.Theme"
    d:DesignHeight="240"
    d:DesignWidth="400"
    theme:ColorThemeProps.Background="{DynamicResource BackgroundBrush}"
    Background="White"
    mc:Ignorable="d">
    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <!--  窗体的宽和高根据内容的大小设置  -->
            <Setter Property="SizeToContent" Value="WidthAndHeight" />
            <!--  不允许调整窗体尺寸  -->
            <Setter Property="ResizeMode" Value="NoResize" />
            <!--  设置窗体的启动位置在屏幕中间  -->
            <Setter Property="prism:Dialog.WindowStartupLocation" Value="CenterScreen" />
        </Style>
    </prism:Dialog.WindowStyle>
    <UserControl.Resources>
        <conv:IntegerToBoolConverter x:Key="IntToBoolConverter0" TrueValue="0" />
        <conv:IntegerToBoolConverter x:Key="IntToBoolConverter1" TrueValue="1" />
        <conv:IntegerToBoolConverter x:Key="IntToBoolConverter2" TrueValue="2" />
        <conv:IntegerToBoolConverter x:Key="IntToBoolConverter3" TrueValue="3" />
    </UserControl.Resources>
    <Border
        Margin="20"
        Padding="0"
        BorderBrush="Black"
        BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <StackPanel
                Grid.Row="1"
                Margin="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Vertical">
                <TextBlock
                    Margin="4"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Text="Thickness" />

                <RadioButton
                    Margin="4"
                    HorizontalAlignment="Left"
                    Content="Silicon"
                    GroupName="WaferThickness"
                    IsChecked="{Binding Location, Converter={StaticResource IntToBoolConverter0}}"
                    Style="{x:Null}" />
                <RadioButton
                    Margin="4"
                    HorizontalAlignment="Left"
                    Content="Thin Glass"
                    GroupName="WaferThickness"
                    IsChecked="{Binding Location, Converter={StaticResource IntToBoolConverter1}}"
                    Style="{x:Null}" />
                <!--<RadioButton
                Margin="4"
                HorizontalAlignment="Left"
                Content="Thick Glass"
                GroupName="WaferThickness"
                IsChecked="{Binding Location, Converter={StaticResource IntToBoolConverter2}}"
                Style="{x:Null}" />-->
            </StackPanel>
            <StackPanel
                Grid.Row="5"
                Margin="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Width="80"
                    Height="30"
                    Margin="0,0,0,0"
                    VerticalAlignment="Center"
                    Background="#E8E8E8"
                    Command="{Binding ConfirmCommand}"
                    Content="OK"
                    FontSize="12" />
                <Button
                    Width="80"
                    Height="30"
                    Margin="80,0,0,0"
                    VerticalAlignment="Center"
                    Background="#E8E8E8"
                    Command="{Binding CancelCommand}"
                    Content="Cancel"
                    FontSize="12" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
