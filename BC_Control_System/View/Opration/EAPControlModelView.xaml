<UserControl
    x:Class="BC_Control_System.View.Opration.EAPControlModelView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:ValueConverters;assembly=ValueConverters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BC_Control_System.View.Opration"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:theme="clr-namespace:BC_Control_System.Theme"
    Width="340"
    Height="220"
    theme:ColorThemeProps.Background="{DynamicResource BackgroundBrush}"
    mc:Ignorable="d">
    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <!--  窗体的宽和高根据内容的大小设置  -->
            <Setter Property="SizeToContent" Value="WidthAndHeight" />
            <!--  不允许调整窗体尺寸  -->
            <Setter Property="ResizeMode" Value="NoResize" />
            <!--  设置窗体的启动位置在屏幕中间  -->
            <Setter Property="prism:Dialog.WindowStartupLocation" Value="CenterScreen" />
        </Style>
    </prism:Dialog.WindowStyle>
    <UserControl.Resources>
        <conv:IntegerToBoolConverter x:Key="IntToBoolConverter0" TrueValue="1" />
        <conv:IntegerToBoolConverter x:Key="IntToBoolConverter1" TrueValue="2" />
        <conv:IntegerToBoolConverter x:Key="IntToBoolConverter2" TrueValue="3" />
        <conv:IntegerToBoolConverter x:Key="IntToBoolConverter3" TrueValue="4" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Margin="10" Orientation="Vertical">
            <TextBlock
                Margin="40,14,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Text="EAP State Change : " />
            <StackPanel
                Margin="40,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
                <RadioButton
                    Margin="10"
                    HorizontalAlignment="Left"
                    Content="Offline"
                    GroupName="EAPState"
                    IsChecked="{Binding ControlMode, Converter={StaticResource IntToBoolConverter0}}"
                    Style="{x:Null}" />
                <RadioButton
                    Margin="10"
                    HorizontalAlignment="Left"
                    Content="Online Local"
                    GroupName="EAPState"
                    IsChecked="{Binding ControlMode, Converter={StaticResource IntToBoolConverter1}}"
                    Style="{x:Null}" />
                <RadioButton
                    Margin="10"
                    HorizontalAlignment="Left"
                    Content="Online Remote"
                    GroupName="EAPState"
                    IsChecked="{Binding ControlMode, Converter={StaticResource IntToBoolConverter1}}"
                    Style="{x:Null}" />
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="5" Orientation="Horizontal">
            <Button
                Width="80"
                Height="30"
                Margin="50,0,0,0"
                VerticalAlignment="Center"
                Background="#E8E8E8"
                Command="{Binding ConfirmCommand}"
                Content="OK"
                FontSize="12" />
            <Button
                Width="80"
                Height="30"
                Margin="80,0,0,0"
                VerticalAlignment="Center"
                Background="#E8E8E8"
                Command="{Binding CancelCommand}"
                Content="Cancel"
                FontSize="12" />
        </StackPanel>
    </Grid>
</UserControl>
