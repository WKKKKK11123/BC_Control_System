<UserControl
    x:Class="BC_Control_System.View.Opration.LDAccessStateView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:ValueConverters;assembly=ValueConverters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:BC_Control_System.View.Parameter"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:theme="clr-namespace:BC_Control_System.Theme"
    Width="600"
    Height="300"
    d:DesignHeight="300"
    d:DesignWidth="600"
    theme:ColorThemeProps.Background="{DynamicResource BackgroundBrush}"
    mc:Ignorable="d">
    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <!--  窗体的宽和高根据内容的大小设置  -->
            <Setter Property="SizeToContent" Value="WidthAndHeight" />
            <!--  不允许调整窗体尺寸  -->
            <Setter Property="ResizeMode" Value="NoResize" />
            <!--  设置窗体的启动位置在屏幕中间  -->
            <Setter Property="prism:Dialog.WindowStartupLocation" Value="CenterScreen" />
        </Style>
    </prism:Dialog.WindowStyle>
    <Grid Width="450" Height="260">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="120*" />
            <RowDefinition Height="120*" />
            <RowDefinition Height="35*" />

        </Grid.RowDefinitions>
        <Button
            Grid.Row="2"
            Width="100"
            Margin="30,0,0,0"
            HorizontalAlignment="Left"
            Command="{Binding ConfirmCommand}"
            Content="OK" />
        <Button
            Grid.Row="2"
            Grid.Column="1"
            Width="100"
            Margin="0,0,30,0"
            HorizontalAlignment="Right"
            Command="{Binding CancelCommand}"
            Content="Cancel" />
        <GroupBox Margin="5,2,5,5" Style="{x:Null}">
            <GroupBox.Header>
                <TextBlock
                    Margin="0,0,0,0"
                    FontSize="12"
                    Foreground="Black"
                    Text="Load Port1" />
            </GroupBox.Header>
            <StackPanel
                Margin="20,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
                <RadioButton
                    Margin="10"
                    HorizontalAlignment="Left"
                    Content="Manual"
                    GroupName="Demo1"
                    IsChecked="True"
                    Style="{x:Null}" />
                <RadioButton
                    Margin="10"
                    HorizontalAlignment="Left"
                    Content="Auto"
                    GroupName="Demo1"
                    IsChecked="{Binding LD1AccessState}"
                    Style="{x:Null}" />
            </StackPanel>
        </GroupBox>
        <GroupBox
            Grid.Column="1"
            Margin="5,5,5,5"
            Style="{x:Null}">
            <GroupBox.Header>
                <TextBlock
                    Margin="0,0,0,0"
                    FontSize="12"
                    Foreground="Black"
                    Text="Load Port2" />
            </GroupBox.Header>
            <StackPanel
                Margin="20,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
                <RadioButton
                    Margin="10"
                    HorizontalAlignment="Left"
                    Content="Manual"
                    GroupName="LD2AccessState"
                    IsChecked="True"
                    Style="{x:Null}" />
                <RadioButton
                    Margin="10"
                    HorizontalAlignment="Left"
                    Content="Auto"
                    GroupName="LD2AccessState"
                    IsChecked="{Binding LD2AccessState}"
                    Style="{x:Null}" />
            </StackPanel>


        </GroupBox>
        <GroupBox
            Grid.Row="1"
            Margin="5,2,5,5"
            Style="{x:Null}">
            <GroupBox.Header>
                <TextBlock
                    Margin="0,0,0,0"
                    FontSize="12"
                    Foreground="Black"
                    Text="Load Port3" />
            </GroupBox.Header>
            <StackPanel
                Margin="20,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
                <RadioButton
                    Margin="10"
                    HorizontalAlignment="Left"
                    Content="Manual"
                    GroupName="LD3AccessState"
                    IsChecked="True"
                    Style="{x:Null}" />
                <RadioButton
                    Margin="10"
                    HorizontalAlignment="Left"
                    Content="Auto"
                    GroupName="LD3AccessState"
                    IsChecked="{Binding LD3AccessState}"
                    Style="{x:Null}" />
            </StackPanel>
        </GroupBox>
        <GroupBox
            Grid.Row="1"
            Grid.Column="1"
            Margin="5,5,5,5"
            Style="{x:Null}">
            <GroupBox.Header>
                <TextBlock
                    Margin="0,0,0,0"
                    FontSize="12"
                    Foreground="Black"
                    Text="Load Port4" />
            </GroupBox.Header>
            <StackPanel
                Margin="20,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
                <RadioButton
                    Margin="10"
                    HorizontalAlignment="Left"
                    Content="Manual"
                    GroupName="LD4AccessState"
                    IsChecked="True"
                    Style="{x:Null}" />
                <RadioButton
                    Margin="10"
                    HorizontalAlignment="Left"
                    Content="Auto"
                    GroupName="LD4AccessState"
                    IsChecked="{Binding LD4AccessState}"
                    Style="{x:Null}" />
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>
