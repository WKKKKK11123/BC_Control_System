<UserControl
    x:Class="BC_Control_System.View.Opration.OpenFileView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BC_Control_System.View.Opration"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:theme="clr-namespace:BC_Control_System.Theme"
    Width="600"
    Height="400"
    d:DesignHeight="450"
    d:DesignWidth="800"
    theme:ColorThemeProps.Background="{DynamicResource BackgroundBrush}"
    Background="{DynamicResource BackgroundBrush}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <DockPanel LastChildFill="True">
            <TextBlock
                Margin="10,10,1,1"
                DockPanel.Dock="Top"
                Text="Folder Select" />
            <ListView
                Margin="20"
                FontSize="12"
                ItemsSource="{Binding OpenFiles, Mode=TwoWay}"
                SelectedItem="{Binding SelectFile}"
                SelectionMode="Single"
                Style="{x:Null}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </DockPanel>
        <Button
            Grid.Row="2"
            Width="100"
            Margin="30,0,0,0"
            HorizontalAlignment="Left"
            Command="{Binding ConfirmCommand}"
            Content="OK" />
        <Button
            Grid.Row="1"
            Width="100"
            Margin="0,19,37,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Command="{Binding CancelCommand}"
            Content="Cancel" />
    </Grid>
</UserControl>
