<UserControl
    x:Class="BC_Control_System.View.Opration.ProcessStartView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BC_Control_System.View.Opration"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:theme="clr-namespace:BC_Control_System.Theme"
    Width="640"
    Height="280"
    theme:ColorThemeProps.Background="{DynamicResource BackgroundBrush}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TextBlock
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="Select DHF manual recipe and execute by using" />
        </Grid>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <TextBlock
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="Recipe" />
            <TextBox
                Width="160"
                Height="26"
                Margin="100,0,0,0"
                IsReadOnly="True"
                Text="{Binding RecipeName}" />
            <Button
                Width="80"
                Height="30"
                Margin="50,0,0,0"
                VerticalAlignment="Center"
                Background="#E8E8E8"
                Command="{Binding OpenfileDelegateCommand}"
                Content="Browse"
                FontSize="12" />

        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <TextBlock
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="Batch ID" />
            <TextBox
                Width="250"
                Height="26"
                Margin="96,0,0,0"
                Text="{Binding BatchID}" />
        </StackPanel>
        <StackPanel Grid.Row="3" Orientation="Horizontal">
            <TextBlock
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="Carrier 1" />
            <TextBlock
                Margin="20,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text=":Carrier ID" />
            <TextBox
                Width="340"
                Height="26"
                Margin="12,0,0,0"
                IsReadOnly="True"
                Text="{Binding carrierTrackingClasses[0].StationInfo.RFID}" />
        </StackPanel>
        <StackPanel Grid.Row="4" Orientation="Horizontal">
            <TextBlock
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="Carrier 2" />
            <TextBlock
                Margin="20,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text=":Carrier ID" />
            <TextBox
                Width="340"
                Height="26"
                Margin="12,0,0,0"
                IsReadOnly="True"
                Text="{Binding carrierTrackingClasses[1].StationInfo.RFID}" />
        </StackPanel>

        <StackPanel Grid.Row="5" Orientation="Horizontal">
            <Button
                Width="80"
                Height="30"
                Margin="200,0,0,0"
                VerticalAlignment="Center"
                Background="#E8E8E8"
                Command="{Binding ConfirmCommand}"
                Content="OK"
                FontSize="12" />
            <Button
                Width="80"
                Height="30"
                Margin="80,0,0,0"
                VerticalAlignment="Center"
                Background="#E8E8E8"
                Command="{Binding CancelCommand}"
                Content="Cancel"
                FontSize="12" />
        </StackPanel>
    </Grid>
</UserControl>
