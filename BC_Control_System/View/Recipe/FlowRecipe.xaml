<UserControl
    x:Class="BC_Control_System.View.Recipe.FlowRecipe"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BC_Control_System.View.Recipe"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="655"
    d:DesignWidth="1348"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="176" />
        </Grid.ColumnDefinitions>

        <Border
            Margin="6"
            BorderBrush="Gray"
            BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="4*" />
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="7*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Border
                        Grid.Row="0"
                        Grid.Column="0"
                        Background="#E0E0F0"
                        BorderBrush="Gray"
                        BorderThickness="0.3">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="Name" />
                    </Border>
                    <Border
                        Grid.Row="0"
                        Grid.Column="1"
                        Background="White"
                        BorderBrush="Gray"
                        BorderThickness="0.3">
                        <TextBox
                            BorderBrush="Transparent"
                            Style="{x:Null}"
                            Text="{Binding FlowRecipeModel.Name}" />
                    </Border>
                    <Border
                        Grid.Row="1"
                        Grid.Column="0"
                        Background="#E0E0F0"
                        BorderBrush="Gray"
                        BorderThickness="0.3">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="Comment" />
                    </Border>
                    <Border
                        Grid.Row="1"
                        Grid.Column="1"
                        Background="White"
                        BorderBrush="Gray"
                        BorderThickness="0.3">
                        <TextBox
                            HorizontalAlignment="Stretch"
                            BorderBrush="Transparent"
                            Style="{x:Null}"
                            Text="{Binding FlowRecipeModel.Comment}" />
                    </Border>
                    <Border
                        Grid.Row="2"
                        Grid.Column="0"
                        Background="#E0E0F0"
                        BorderBrush="Gray"
                        BorderThickness="0.3">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="Revision No." />
                    </Border>
                    <Border
                        Grid.Row="2"
                        Grid.Column="1"
                        Background="White"
                        BorderBrush="Gray"
                        BorderThickness="0.3">
                        <TextBox
                            HorizontalAlignment="Stretch"
                            BorderBrush="Transparent"
                            Style="{x:Null}"
                            Text="{Binding FlowRecipeModel.RevisionNo}" />
                    </Border>
                    <Border
                        Grid.Row="3"
                        Grid.Column="0"
                        Background="#E0E0F0"
                        BorderBrush="Gray"
                        BorderThickness="0.3">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="Rev.Comment" />
                    </Border>
                    <Border
                        Grid.Row="3"
                        Grid.Column="1"
                        Background="White"
                        BorderBrush="Gray"
                        BorderThickness="0.3">
                        <TextBox
                            HorizontalAlignment="Stretch"
                            BorderBrush="Transparent"
                            Style="{x:Null}"
                            Text="{Binding FlowRecipeModel.RevComment}" />
                    </Border>
                    <DockPanel Grid.Row="4" Grid.ColumnSpan="2">
                        <Border
                            Grid.Row="3"
                            Grid.Column="0"
                            Width="542"
                            Background="#E0E0F0"
                            BorderBrush="Gray"
                            BorderThickness="0.3">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="Face/Back Selection" />
                        </Border>
                        <Border
                            Grid.Row="3"
                            Grid.Column="1"
                            Background="White"
                            BorderBrush="Gray"
                            BorderThickness="0.3">
                            <TextBox
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                BorderBrush="Transparent"
                                Style="{x:Null}" />
                        </Border>
                    </DockPanel>
                </Grid>
                <DataGrid
                    x:Name="grid"
                    Grid.Row="11"
                    Grid.ColumnSpan="2"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    CanUserReorderColumns="False"
                    CanUserResizeColumns="False"
                    CanUserResizeRows="False"
                    ColumnHeaderHeight="25"
                    FontSize="12"
                    GridLinesVisibility="All"
                    HeadersVisibility="Column"
                    HorizontalGridLinesBrush="LightGray"
                    ItemsSource="{Binding FlowSteps, Mode=TwoWay}"
                    SelectionMode="Single"
                    Style="{x:Null}"
                    VerticalGridLinesBrush="LightGray">
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Height" Value="25" />
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Width="150" Header="Flow Step">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontFamily="Microsoft YaHei"
                                        FontSize="14"
                                        Text="{Binding FlowStep, UpdateSourceTrigger=PropertyChanged}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="150" Header="Bath Name">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontFamily="Microsoft YaHei"
                                        FontSize="14"
                                        Text="{Binding BathName, UpdateSourceTrigger=PropertyChanged}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Width="*" Header="Unit Recipe Name">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontFamily="Microsoft YaHei"
                                        FontSize="14"
                                        Text="{Binding UnitRecipeName, UpdateSourceTrigger=PropertyChanged}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
        <Border
            Grid.Column="2"
            Margin="6"
            BorderBrush="Gray"
            BorderThickness="1">
            <StackPanel VerticalAlignment="Top" Orientation="Vertical">
                <Button
                    Width="140"
                    Margin="5,5"
                    VerticalAlignment="Center"
                    Command="{Binding NewRecipeCommand}"
                    Content="New" />
                <Button
                    Width="140"
                    Margin="5,5"
                    VerticalAlignment="Center"
                    Command="{Binding OpenFileCommand}"
                    Content="Open" />
                <Button
                    Width="140"
                    Margin="7,5"
                    VerticalAlignment="Center"
                    Command="{Binding SaveFileCommand}"
                    Content="Save" />
                <Button
                    Width="140"
                    Margin="5,5"
                    VerticalAlignment="Center"
                    Command="{Binding DeleteFileCommand}"
                    Content="Delete" />

                <Button
                    Width="140"
                    Margin="5,5"
                    VerticalAlignment="Center"
                    Command="{Binding AddStepCommand}"
                    Content="Add Step" />
                <Button
                    Width="140"
                    Margin="5,5"
                    VerticalAlignment="Center"
                    Command="{Binding ChangeStepCommand}"
                    CommandParameter="{Binding ElementName=grid, Path=SelectedItem}"
                    Content="Change Step" />

                <Button
                    Width="140"
                    Margin="5,5"
                    VerticalAlignment="Center"
                    Command="{Binding InsertStepCommand}"
                    CommandParameter="{Binding ElementName=grid, Path=SelectedItem}"
                    Content="Ins Step" />
                <Button
                    Width="140"
                    Margin="5,5"
                    VerticalAlignment="Center"
                    Command="{Binding DeleteStepCommand}"
                    CommandParameter="{Binding ElementName=grid, Path=SelectedItem}"
                    Content="Del Step" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
