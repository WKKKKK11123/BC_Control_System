<UserControl
    x:Class="BC_Control_System.View.Recipe.FlowRecipeStepView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:BC_Control_System"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:BC_Control_Models;assembly=BC_Control_Models"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    Width="600"
    Height="400"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ObjectDataProvider
            x:Key="BathNameProvider"
            MethodName="GetValues"
            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="model:BathNameEnum" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>
        <DockPanel LastChildFill="True">
            <TextBlock
                Margin="10,10,1,1"
                DockPanel.Dock="Top"
                Text="Unit Recipe Select" />
            <ListView
                Margin="20"
                FontSize="12"
                ItemsSource="{Binding Source={StaticResource BathNameProvider}}"
                SelectedItem="{Binding BathName}"
                SelectionMode="Single"
                Style="{x:Null}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectionChanged">
                        <i:InvokeCommandAction Command="{Binding ModuleSelectChangedCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </ListView>
        </DockPanel>
        <ListView
            Grid.Column="1"
            Margin="20"
            FontSize="12"
            ItemsSource="{Binding OpenFiles, Mode=TwoWay}"
            SelectedItem="{Binding RecipeName}"
            SelectionMode="Single"
            Style="{x:Null}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button
            Grid.Row="2"
            Width="100"
            Margin="30,0,0,0"
            HorizontalAlignment="Left"
            Command="{Binding ConfirmCommand}"
            Content="OK" />
        <Button
            Grid.Row="2"
            Grid.Column="1"
            Width="100"
            Margin="0,0,30,0"
            HorizontalAlignment="Right"
            Command="{Binding CancelCommand}"
            Content="Cancel" />
    </Grid>
</UserControl>
