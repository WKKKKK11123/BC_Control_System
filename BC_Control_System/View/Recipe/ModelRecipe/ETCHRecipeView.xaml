                                                            Path="DSM"
                                                            UpdateSourceTrigger="PropertyChanged"
                                                            ValidatesOnDataErrors="True">
                                                            <Binding.ValidationRules>
                        -->
                        <!--  默认验证规则 (Type2)  -->
                        <!--
                                                                <rule:ValueLimitRule MaxValue="1000" MinValue="0" />
                                                            </Binding.ValidationRules>
                                                        </Binding>
                                                    </Setter.Value>
                                                </Setter>

                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.IsType1Module, ElementName=rootControl}" Value="True">
                                                        <Setter Property="Text">
