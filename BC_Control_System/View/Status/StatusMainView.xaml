<UserControl
    x:Class="BC_Control_System.View.Status.StatusMainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BC_Control_System.View.Status"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignHeight="655"
    d:DesignWidth="1348"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="7*" />
        </Grid.RowDefinitions>
        <DockPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                DockPanel.Dock="Bottom"
                FontSize="36"
                Text="{Binding ModuleName, Mode=TwoWay}" >
                <TextBlock.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Open Actual Value View" Command="{Binding OpenStationValueViewCommand}"/>
                        <MenuItem Header="Open Folder" Command="{Binding OpenFolderCommand}"/>
                    </ContextMenu>
                </TextBlock.ContextMenu>
            </TextBlock>
        </DockPanel>
        <ContentControl
            Name="ModuleContent"
            Grid.Row="1"
            prism:RegionManager.RegionName="ModuleContentRegion" />
        <GroupBox
            Grid.RowSpan="2"
            Grid.Column="1"
            Margin="10,30,30,10"
            Background="{DynamicResource BackgroundBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            Style="{x:Null}">
            <GroupBox.Header>
                <TextBlock
                    Margin="10,0,0,0"
                    FontSize="17"
                    Text="{Binding ModuleName}" />
            </GroupBox.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="8*" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <ContentControl Name="IOContent" prism:RegionManager.RegionName="IOContentRegion" />
                <ContentControl
                    Name="IOControllerContent"
                    Grid.Row="1"
                    prism:RegionManager.RegionName="IOControllerContent" />
            </Grid>
        </GroupBox>

    </Grid>
</UserControl>

